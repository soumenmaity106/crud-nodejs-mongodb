   <div class="container">
       <div class="row">
           <!-- Form -->
           <div class="col-md-5">
              <div class="card">
                  <div class="card-body">
                      <form action="/edit/<%= task._id %>" method="POST">
                          <div class="form-group">
                              <label for="Title">Title</label>
                              <input type="text" name="title" class="form-control" id="Title" value="<%= task.title %>">
                          </div>
                          <div class="form-group">
                              <label for="description">Description</label>
                              <textarea name="description" id="description" class="form-control" cols="30" rows="4"><%= task.description %></textarea>
                          </div>
                          <button type="submit" class="btn btn-primary btn-block">Update</button>
                      </form>
                  </div>
              </div>
           </div>
           <!-- List -->
          
       </div>
   </div>

